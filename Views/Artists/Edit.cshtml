@model moment3_2.Models.Artist

@{
    ViewData["Title"] = "Startsida - Artister";
}

<h1>Ändra artist</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtistId" />
            <div class="form-group">
                <label asp-for="ArtistName" class="control-label"></label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistAge" class="control-label"></label>
                <input asp-for="ArtistAge" class="form-control" />
                <span asp-validation-for="ArtistAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfAlbums" class="control-label"></label>
                <input asp-for="NumberOfAlbums" class="form-control" />
                <span asp-validation-for="NumberOfAlbums" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till artisterna</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
